{
  "manifest_version": 2,
  "name": "Tab Summarizer",
  "version": "1.0",
  "description": "Send all Safari tabs to backend",
  "permissions": ["tabs", "storage", "activeTab"],
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "browser_action": {
    "default_popup": "popup.html",
    "default_icon": "icon.png"
  }
}
